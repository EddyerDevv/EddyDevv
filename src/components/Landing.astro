<style>
  #app_landing {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: 100dvh;
    padding: 0 1.5rem;
    position: relative;
  }

  #app_landing > .icon-down {
    position: absolute;
    bottom: 2rem;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #app_landing > .icon-down > .icon {
    width: 1.6rem;
    height: 1.6rem;
    cursor: pointer;
    animation: iconDown 1.25s infinite;
  }

  @keyframes iconDown {
    0% {
      transform: translateY(-0.5rem);
      opacity: 0;
    }

    50% {
      opacity: 1;
    }

    100% {
      transform: translateY(0.5rem);
      opacity: 0;
    }
  }

  #app_landing > .principal {
    user-select: none;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    max-width: 45rem;
    width: 100%;
  }

  #app_landing > .principal > .welcome {
    font-size: 1.025rem;
    font-weight: 500;
    font-family: "Poppins", sans-serif;
    color: var(--text-accent-2);
    line-height: 0.8rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.2rem;
    position: relative;
    min-height: 1rem;
  }

  #app_landing > .principal > .content {
    font-size: 3rem;
    font-weight: 700;
    font-family: "Rubik", sans-serif;
    color: var(--landing-message-color);
  }

  #app_landing > .principal > .message {
    margin-top: 0.4rem;
    font-size: 1.2rem;
    font-weight: 400;
    font-family: "Rubik", sans-serif;
    color: var(--landing-message-color);
    width: 100%;
    max-width: 35rem;
  }

  #app_landing > .principal > .message > .resalted {
    font-weight: 500;
  }

  #app_landing > .principal > .content > .resalted,
  #app_landing > .principal > .message > .resalted {
    color: var(--text-accent);
  }

  #app_landing > .principal > .actions {
    margin-top: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  #app_landing > .principal > .actions > .action {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.3rem;
    cursor: pointer;
    text-decoration: none;
    color: var(--landing-message-color);
    padding: 0.4rem 1.3rem;
    background-color: var(--landing-action-background-color);
    border: solid 0.1rem var(--landing-action-color);
    border-radius: 50px;
    min-height: 2.25rem;
  }

  #app_landing > .principal > .actions > .action > .icon {
    width: 1.325rem;
    height: 1.325rem;
  }

  #app_landing > .principal > .actions > .action > .icon.small {
    width: 1.1rem;
    height: 1.1rem;
  }

  #app_landing > .principal > .actions > .action > .text {
    font-size: 1rem;
    font-weight: 400;
    font-family: "Rubik", sans-serif;
  }
</style>
