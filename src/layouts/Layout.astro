---
import { AstroFont } from "astro-font";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Eddyer Morales - A simple back-end developer"
    />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <AstroFont
      config={[
        {
          src: [],
          name: "Rubik",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Rubik:wght@100;200;300;400;500;600;700;800;900&display=swap",
          preload: true,
          display: "swap",
          selector: "html",
          fallback: "sans-serif",
        },
      ]}
    />
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
      }

      html {
        font-family: "Rubik", sans-serif;
        background: #13151b;
        color: #ffffff;
      }
    </style>
  </body>
</html>
