---
import { AstroFont } from "astro-font";
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="EddyDevv - Experienced Junior Fullstack Developer, skilled in crafting efficient and scalable projects."
    />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <AstroFont
      config={[
        {
          src: [],
          name: "Rubik",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Rubik:wght@100;200;300;400;500;600;700;800;900&display=swap",
          preload: true,
          display: "swap",
          selector: "html",
          fallback: "sans-serif",
        },
        {
          src: [],
          name: "Open Sans",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Open+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap",
          preload: true,
          display: "swap",
          selector: "html",
          fallback: "sans-serif",
        },
        {
          src: [],
          name: "Poppins",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap",
          preload: true,
          display: "swap",
          selector: "html",
          fallback: "sans-serif",
        },
      ]}
    />
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <style is:global>
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      :root {
        --text-accent: rgb(33, 186, 114);
        --text-accent-2: rgb(107, 255, 149);
        --text-primary: rgb(255, 255, 255);

        --header-spacer-color: rgb(255, 255, 255, 0.1);
        --header-link-color: rgb(216, 240, 229);

        --landing-message-color: rgb(255, 255, 255);
      }

      html {
        font-family: "Rubik", sans-serif;
        width: 100%;
        height: 100dvh;
        background: rgb(5, 10, 8);
        color: var(--text-primary);
      }
    </style>
  </body>
</html>
