---
import Layout from "../layouts/Layout.astro";
---

<Layout title="EddyDevv - Experienced Junior Full-Stack Developer">
  <main id="page_404">
    <section class="principal">
      <span class="icon">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="svg"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M9 15l6 -6"></path><path
            d="M11 6l.463 -.536a5 5 0 0 1 7.071 7.072l-.534 .464"></path><path
            d="M13 18l-.397 .534a5.068 5.068 0 0 1 -7.127 0a4.972 4.972 0 0 1 0 -7.071l.524 -.463"
          ></path></svg
        >
      </span>
      <h1 class="text">Page not found</h1>
    </section>
    <section class="content">
      <h2 class="text">
        The page you are looking for does not exist, what will you do now?
      </h2>
      <div class="actions">
        <button class="btn" onclick="history.back()" id="btn_go_back"
          >Go back</button
        >
        <button class="btn accent" onclick="location.reload()" id="btn_retry"
          >Retry</button
        >
      </div>
    </section>
  </main>
</Layout>

<style>
  #page_404 {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: 100dvh;
    gap: 0.7rem;
  }

  #page_404 > .principal {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
  }

  #page_404 > .principal > .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background-color: rgb(41, 56, 49);
    color: rgb(198, 222, 211);
  }

  #page_404 > .principal > .icon > .svg {
    width: 2rem;
    height: 2rem;
  }

  #page_404 > .principal > .text {
    font-size: 1.6rem;
    font-weight: 600;
    font-family: "Poppins", sans-serif;
  }

  #page_404 > .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  #page_404 > .content > .text {
    font-size: 1.1rem;
    font-weight: 400;
    width: 20rem;
    text-align: center;
    color: #a6bdab;
  }

  #page_404 > .content > .actions {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.45rem;
    margin-top: 0.8rem;
  }

  #page_404 > .content > .actions > .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.4rem 1.2rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    font-family: "Poppins", sans-serif;
    border: none;
    cursor: pointer;
    background-color: rgb(255, 255, 255, 0.1);
    color: rgb(255, 255, 255, 0.8);
    transition:
      background-color 0.15s ease,
      color 0.15s ease;
  }

  #page_404 > .content > .actions > .btn:hover {
    background-color: rgb(255, 255, 255, 0.15);
    color: rgb(255, 255, 255, 0.9);
  }

  #page_404 > .content > .actions > .btn.accent {
    background-color: rgb(29, 177, 108);
    color: rgb(255, 255, 255);
  }

  #page_404 > .content > .actions > .btn.accent:hover {
    background-color: rgb(27, 148, 92);
    color: rgb(255, 255, 255);
  }
</style>
